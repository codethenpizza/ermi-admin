{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "@app": ["./app"],
      "@components": ["./components"],
      "@containers": ["./containers"],
      "@store": ["./store"],
      "@pages": ["./pages"],
      "@layouts": ["./layouts"],
      "@routes": ["./routes"],
      "@utils": ["./utils"],
      "@services": ["./services"],
      "@types": ["./types"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
